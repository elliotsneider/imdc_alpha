// --- Generator: Prisma client ---
generator client {
  provider = "prisma-client-js"
}

// --- Datasource: Your secure Postgres database ---
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Secure Profile Models ---

model users {
  id           String         @id @default(cuid())
  username     String         @unique
  fullname     String?
  created_at    DateTime       @default(now())
  modified     DateTime
  email        String
  password      String
  nft       String?
}
